<!DOCTYPE html>
<html>
  <script src="stocks.js"></script>
  <head>
    <meta charset="utf-8">
    <title>Stock Watcher</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
  </head>
  <body>
    <div class="ioContainer">
		<div class="ioDiv">
		  <p id="add">Add</p>
		  <fieldset class="io">
			<form action="?name=formAdd" method="post">
			  <input name="addedSymbol" type="text" class="inputBox" placeholder="Symbol" required>
			  <input name="desiredPrice" type="text" class="inputBox" placeholder="Price" required>
			  <input type="submit" class="button" value="Add">
			</form>
		  </fieldset>
		</div>
		<div class="ioDiv">
		  <p id="remove">Remove</p>  
		  <fieldset class="io">
			<form action="?name=formRemove" method="post">
			  <input name="removedSymbol" type="text" class="inputBox" placeholder="Symbol" required>
			  <input type="submit" class="button" value="Remove">
			</form>
		  </fieldset>
		</div>
		<div class="ioDiv">
		  <p id="export">Export</p>
		  <fieldset class="io">
			<form action="?name=formExport" method="post">
			  <input type="submit" class="button" value="Export">
			</form>
		  </fieldset>
		</div>
    </div>
	<fieldset class="portfolio"> 
		<p>Your portfolio:</p>
		<form action="?name=formRemove" method="post" id="removeForm">
			<input id="removeText" type="text" name="removedSymbol" style="display:none">
			<table class="portfolioTable" cellspacing="0" cellpadding="0">
				<tr class="stock" id="TSLA"><td>TSLA</td><td>Open: $782.59</td><td>Watching for: $9999</td><td><button form="removeForm" class="deleteButton" type="submit" onclick="sendSymbol('TSLA')">DELETE</button></td></tr>
				<tr class="stock" id="MSFT"><td>MSFT</td><td>Open: $182.66</td><td>Watching for: $9999</td><td><button form="removeForm" class="deleteButton" type="submit" onclick="sendSymbol('MSFT')">DELETE</button></td></tr>
				<tr class="stock" id="AAPL"><td>AAPL</td><td>Open: $300.8400</td><td>Watching for: $1</td><td><button form="removeForm" class="deleteButton" type="submit" onclick="sendSymbol('AAPL')">DELETE</button></td></tr>
				<tr class="stock" id="F"><td>F</td><td>Open: $4.9072</td><td>Watching for: $9999.99</td><td><button form="removeForm" class="deleteButton" type="submit" onclick="sendSymbol('F')">DELETE</button></td></tr>
			</table>
		</form>
		<script>function sendSymbol(s){ document.getElementById("removeText").value = s;}</script>
	</fieldset>
  </body>
</html>